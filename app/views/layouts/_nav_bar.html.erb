<div class="bg-white fixed top-0 w-full">
  <%= render partial: "layouts/notice" %>
  <header class="lg:static lg:overflow-y-visible text-gray-500" data-controller="toggle">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative flex justify-between xl:grid xl:grid-cols-12 lg:gap-8">
        <div class="flex md:absolute md:left-0 md:inset-y-0 lg:static">
          <div class="flex-shrink-0 flex items-center">
            <a href="#">
              <%= inline_svg_tag('svg/xyz_company.svg', class: "block h-8 w-auto") %>
            </a>
          </div>
        </div>
        <div class="ml-6 min-w-0 flex-1 md:px-8 lg:px-0 xl:col-span-2">
          <div class="flex items-center px-6 py-4 md:max-w-3xl md:mx-auto lg:max-w-none lg:mx-0 xl:px-0">
            <div class="w-full">
              <label for="search" class="sr-only">Search</label>
              <div class="relative">
                <div class="pointer-events-none absolute inset-y-0 left-0 pl-3 flex items-center">
                  <%= inline_svg_tag('svg/search_icon.svg', class: "h-5 w-5 text-gray-400") %>
                </div>
                <input id="search" name="search" class="block w-full bg-white border border-gray-300 rounded-full focus:outline-none focus:border-indigo-500 py-2 pl-10 pr-3 text-sm placeholder-gray-500 focus:outline-none focus:text-gray-900 focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Search" type="search">
              </div>
            </div>
          </div>
        </div>
        <div class="flex items-center md:absolute md:right-0 md:inset-y-0 lg:hidden">
          <button type="button" data-action="click->toggle#toggle touch->toggle#toggle" class="-mx-2 rounded-md p-2 inline-flex items-center justify-center text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" aria-expanded="false">
            <span class="sr-only">Open menu</span>
            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="hidden lg:flex lg:items-center lg:justify-end xl:col-span-8">
          <div class="border-r border-gray-100">
          <a href="#" class="inline-flex items-center pr-4 pt-1 text-sm font-medium"> Home </a>
          <a href="#" class="inline-flex items-center pr-4 pt-1 text-sm font-medium"> Rent Textbooks </a>
          <a href="#" class="inline-flex items-center pr-4 pt-1 text-sm font-medium"> Buy Textbooks </a>
          <a href="#" class="inline-flex items-center px-1 pt-1 text-sm font-medium"> Sell Textbooks </a>
          </div>
          <div class="pl-5 text-gray-400 flex items-center">
            <%= inline_svg_tag('svg/locale_globe.svg', class: "h-4 w-4") %>
            <div class="ml-2"> En </div>
          </div>

          <a href="#" class="ml-6 inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-lg shadow-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"> Contact </a>
        </div>
      </div>
    </div>

    <nav class="hidden" aria-label="Global" data-toggle-target="toggleable">
      <div class="max-w-3xl mx-auto px-2 pt-2 pb-3 space-y-1 sm:px-4">
        <a href="#" aria-current="page" class="bg-gray-100 text-gray-900 block rounded-md py-2 px-3 text-base font-medium">Dashboard</a>
        <a href="#" class="hover:bg-gray-50 block rounded-md py-2 px-3 text-base font-medium">Home</a>
        <a href="#" class="hover:bg-gray-50 block rounded-md py-2 px-3 text-base font-medium">Rent Textbooks</a>
        <a href="#" class="hover:bg-gray-50 block rounded-md py-2 px-3 text-base font-medium">Buy Textbooks</a>
        <a href="#" class="hover:bg-gray-50 block rounded-md py-2 px-3 text-base font-medium">Sell Textbooks</a>
      </div>
    </nav>
  </header>
</div>